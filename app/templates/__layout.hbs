<!doctype html>
<html lang="en">

  <head>
    <meta charset="utf-8"/>
    <meta name="description" content="Rendr CRUD"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Rendr CRUD</title>

    <link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" media="screen" rel="stylesheet" type="text/css" />
    <link href="/styles.css" media="screen" rel="stylesheet" type="text/css" />
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="/">Rendr CRUD</a>
          </div>
          <ul class="nav navbar-nav">
            <li><a href="/" data-controller="home" data-action="index">Home</a></li>
            <li><a href="/users" data-controller="users" data-action="index">Users</a></li>
            <li><a href="/users/create" data-controller="users" data-action="create">Create User</a></li>
          </ul>
        </div>
    </div>
    <div id="alerts"></div>
    <div id="loader" class="modal-backdrop in hide"></div>

    <section id="content" class="container">
      {{{body}}}
    </section>

    <script src="/mergedAssets.js"></script>
    <script>
    (function() {
      var App = window.App = new (require('app/app'))({{json appData}});
      App.bootstrapData({{json bootstrappedData}});
      App.start();
    })();
    </script>
  </body>
</html>
